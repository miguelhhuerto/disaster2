<!DOCTYPE html>
<html>
  <div class="p-3 mb-2 bg-secondary text-white">
    <head>

  <a class="btn btn-outline-warning " data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">
  Menu
  </a>

  <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
    <div class="offcanvas-header d-flex justify-content-center">
      <h5 class="offcanvas-title d-flex justify-content-center" id="offcanvasExampleLabel">Menu</h5>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">

      <div>
        <%= link_to 'Index', posts_path, method: :get, class: 'btn btn-dark d-grid gap-2 col-6 mx-auto' %>
      </div>
      </br>
      <div>
        <%= link_to 'New Post', new_post_path, method: :get, class: 'btn btn-dark d-grid gap-2 col-6 mx-auto' %>
      </div>
      </br>
      <div>
        <%if user_signed_in?%>
          <%=button_to 'User Posts', user_posts_path,method: :get, class: 'btn btn-dark d-grid gap-2 col-6 mx-auto' %>
        <%end%>
      </div>
      </br>
      <div>
        <%if user_signed_in?%>
          <%=button_to 'User Comments', user_comments_path,method: :get, class: 'btn btn-dark d-grid gap-2 col-6 mx-auto' %>
        <%end%>
      </div>
      </br>
      <div>
        <% if user_signed_in? %>
          <%= link_to 'Sign out', destroy_user_session_path, data: { 'turbo-method': :delete }, class: 'btn btn-dark d-grid gap-2 col-6 mx-auto'%>
        <% else %>
          <%= link_to 'Sign in', new_user_session_path , class: 'btn btn-dark d-grid gap-2 col-6 mx-auto'%>
        <% end %>
      </div>

  
    </div>
  </div>

    <title>Disaster List</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%if notice%>
      <%= render 'layouts/alert'%>
    <%end%>
    <p class="alert"><%= alert %></p>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>


  </head>

  <body class="p-3 mb-2 bg-secondary text-white">
    <%= yield %>
  </body>
  </div>
</html>
