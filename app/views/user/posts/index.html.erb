<h1>User Posts</h1>
 <%= link_to 'Index', posts_path %>
<table>
  <thead>
  <td>title</td>
  <td>content</td>
  <td>address</td>
  <td>category</td>
  <td>user</td>
  <td>action</td>
  </thead>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= post.address %></td>
      <td><%= post.categories.pluck(:name).join(',') %></td>
      <td><%= post.user&.email %></td>
      <td><%= Geocoder.search(post.ip_address).first&.country%></td>
      <td><%= Geocoder.search(post.ip_address).first&.city%></td>

      <td>
        <%= link_to 'Show', post_path(post) %>
        <%= link_to 'Edit', edit_post_path(post) if user_signed_in? && post.user == current_user %>
        <%= button_to 'Delete', post_path(post), method: :delete if user_signed_in? && post.user == current_user %>
        <%= link_to 'Comments', post_comments_path(post) %>
        <%= link_to 'New Comment', new_post_comment_path(post) %>
      </td>
    </tr>
  <% end %>
</table>

<%= paginate @posts %>